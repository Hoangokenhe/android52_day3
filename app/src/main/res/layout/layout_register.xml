<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="@dimen/_20ssp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:text="Join us to start Crypto trade!"
            android:textColor="@color/black"
            android:textSize="@dimen/_22sdp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_90sdp"
            app:cardCornerRadius="@dimen/_15ssp">

            <ImageView

                android:layout_width="@dimen/_25ssp"
                android:layout_height="@dimen/_25ssp"
                android:scaleType="fitXY"
                android:src="@drawable/img" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15ssp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover your perfect Crypto currencies."
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Create Account"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/edt"
            android:hint="Name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/edt"
            android:hint="Email" />

        <EditText
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/edt"
            android:hint="Password" />

        <EditText
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/edt"
            android:hint="Phone Number" />
<RadioGroup
    android:padding="@dimen/_10sdp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RadioButton
        android:button="@drawable/selecter_checkbox2"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I agree with the Teams Condition  Privacy Policy" />

    <RadioButton
        android:layout_marginTop="@dimen/_5sdp"
        android:button="@drawable/selecter_checkbox2"
        android:id="@+id/cbSaveLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Account" />

</RadioGroup>

<Button
    android:layout_gravity="center"
    android:textColor="@color/white"
    android:background="@drawable/bg_btnlogin"
    android:text="Join us"
    android:layout_width="@dimen/_270sdp"
    android:layout_height="@dimen/_30sdp"/>
<LinearLayout

    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Do have already account ?"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_marginLeft="@dimen/_2sdp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Login"
        android:textColor="@color/black"
        />
</LinearLayout>


    </LinearLayout>


</LinearLayout>